#include <iostream>
#include<bits/stdc++.h>

using namespace std;

int main() {
    int tc; cin>>tc;
    while(tc--){
        string str;
        cin>>str;
        int pairs=0;
        for(int i=0;i<(str.length()-1);i++){
            if(abs(int(str[i])-int(str[i+1]))==1){
                pairs++;
                i++;
            }
        }
        cout<<pairs<<endl;
    }
	// your code goes here
	return 0;
}
